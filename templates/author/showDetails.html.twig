{% extends 'base.html.twig' %}

{% block title %}Auteur #{{ author.id }}{% endblock %}

{% block body %}
  <h1>Détails d'un auteur dont l'ID est {{ author.id }}</h1>

  <ul>
    <li><strong>Username :</strong> {{ author.username }}</li>
    <li><strong>Email :</strong> {{ author.email }}</li>
  </ul>

  <p>
    <a href="{{ path('ShowAll') }}">← Retour à la liste</a>
  </p>
{% endblock %}
